<%= render "shared/profilenavbar" %>

<div class="wholepage">
  <div>
    <section class="infosection w-100">
    <img id="pimg" class="mt-5 profile-pic" src="https://www.business2community.com/wp-content/uploads/2017/08/blank-profile-picture-973460_640.png" alt="profile picture of the current user">
      <div class="pinfos mt-4">
        <p class="fw-bold"><%= current_user.username.capitalize %></p>
        <p class="sharebtn"><%= current_user.email %></p>
      </div>
    </section>
  </div>

  <section class="eventsection mt-3 bottom-pushup">
  <h2 id="yeventsheader">Your events</h2>
    <% @events.each do |event| %>
      <div class="yourevents d-flex w-80 justify-content-between px-3">
        <%= cl_image_tag event.photo.key, class: "youreventsimg", crop: :fill %>
        <%# <%= cl_image_tag @event.photo.key, height: 100, width: 100, crop: :fill, :radius => 50 %>
        <div class="youreventinfo">
          <%= link_to event_path(event) do %>
            <p><%= event.name %></p>
          <% end %>
          <%= link_to event_path(event) do %>
            <p><%= event.start_time.strftime("%m/%d/%Y") %></p>
          <% end %>
        </div>
      </div>
      <hr class="hrevents">
      <% end %>
  </section>
</div>

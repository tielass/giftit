<%= render "shared/navbar" %>

<div class="giftheadersolo">
  <h3><%= @gift.name %></h3>
</div>
<div class="container">
  <div class="giftcardsolo">
    <div class="giftimage">
      <%= image_tag @gift.photo %>
    </div>
    <div class="giftinfo">
      <div class="card-text">
        $<%= @gift.price.to_i %>
      </div>
      <br>
      <div class="card-description bottom-pushup">
        <%= @gift.description %>
      </div>
    </div>
  </div>
</div>

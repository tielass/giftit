<div class="container p-4 mt-3">
  <div class="d-flex justify-content-center"><h1>Create event</h1></div>
  <%= simple_form_for(@event) do |f| %>
    <%= f.input :photo, as: :file, label: "Add your fan Image"%>
    <%= f.input :name, placeholder: 'Steves birthday' %>
    <%= f.input :start_time %>
    <%= f.input :tag_list %>
    <%# <input class="customLook" value="tags here"> %>
    <%# <button type="button">+</button> %>
    <%= f.input :price, placeholder: '$ 15' %>
    <div class="row">
      <div class="text-center d-flex justify-content-center">
        <%= f.submit class: "btn-giftit" %>
      </div>
    </div>
  <% end %>
</div>

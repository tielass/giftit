<%= render "shared/createevent" %>
<div class="container px-5" data-controller="addhobby">
  <%= simple_form_for(@event) do |f|  %>
    <div class="container d-flex justify-content-center my-4">
      <%= image_tag "event.jpg", class:"event-image" %>
    </div>
    <div data-controller="photo-preview">
      <%= image_tag "", data: {photo_preview_target: "img"}, id:"upload-image" %>
      <%= f.input :photo,  as: :file, label: 'Upload a picture', input_html:{class:"foto-form", data: {action: "photo-preview#change", photo_preview_target: "input"}}%>
    </div>
    <%= f.input :name, input_html: {class:  "event-input"}, label: "Event's name" %>
    <%= f.input :start_time, input_html: {class:  "event-input"},  label: "Date",  html5: true %>
    <%= f.input :hobbies, input_html: {class:  "event-input"}, label: "Interests", class:"customLook", input_html: { data: { addhobby_target: "addHobby", action: "change->addhobby#addTag" } } %>
    <%# <%= f.hint 'Choose: Technology, Chocolate, Food, Cooking, Running, Hiking, Perfume, Practical, Subscriptions, Wellness, Yoga, Wildcard' %>
    <%= f.input :price, input_html: {class:  "event-input"},  placeholder: 'Set max amount between 0-600' %>
    <div class="row bottom-pushup">
      <div class="text-center d-flex justify-content-center mt-3">
        <%= f.submit class: "btn-giftit" %>
      </div>
    </div>
  <% end %>
</div>
